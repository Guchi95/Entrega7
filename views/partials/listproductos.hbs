<div class='container'>


    <table id='table' class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Product Name</th>
                <th scope="col">Price</th>
                <th scope="col">Photo</th>
            </tr>
        </thead>
        <tbody>
            {{#if productos.length }}
            {{#each productos}}
            <tr>
                <th scope="row">{{this.id}}</th>
                <td>{{this.title}}</td>
                <td>{{this.price}}</td>
                <td><img style='max-height:30px;' class="img-fluid" src={{this.thumbnail}} alt=""></td>
            </tr>
            {{/each}}
            {{else}}

            <div align='center' class="alert alert-warning" role="alert">
                No hay productos wachin
            </div>
            {{/if}}

        </tbody>
    </table>





    <br />

</div>